    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-logo">LearnHub</div>
                <p>Your gateway to knowledge and skill development.</p>
                <div class="footer-links">
                    <a href="#">Home</a>
                    <a href="#">Courses</a>
                    <a href="#">About</a>
                    <a href="#">Contact</a>
                    <a href="#">Privacy Policy</a>
                </div>
                <p class="copyright">&copy; 2023 LearnHub. All rights reserved.</p>
            </div>
        </div>
