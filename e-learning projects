    <script>
        // Course Data
        const courses = [
            {
                id: 1,
                title: "Introduction to Web Development",
                description: "Learn the fundamentals of HTML, CSS, and JavaScript to build your first website.",
                duration: "4 weeks",
                lessons: 12,
                image: "Web Dev",
                lessonsList: [
                    { title: "HTML Basics", duration: "30 min", completed: false },
                    { title: "CSS Fundamentals", duration: "45 min", completed: false },
                    { title: "JavaScript Introduction", duration: "60 min", completed: false },
                    { title: "Responsive Design", duration: "50 min", completed: false },
                    { title: "Project: Personal Portfolio", duration: "90 min", completed: false }
                ],
                completed: false
            },
            {
                id: 2,
                title: "Data Science Fundamentals",
                description: "Explore data analysis, visualization, and basic machine learning concepts.",
                duration: "6 weeks",
                lessons: 15,
                image: "Data Science",
                lessonsList: [
                    { title: "Introduction to Data Science", duration: "40 min", completed: false },
                    { title: "Python for Data Analysis", duration: "60 min", completed: false },
                    { title: "Data Visualization with Matplotlib", duration: "50 min", completed: false },
                    { title: "Statistical Concepts", duration: "55 min", completed: false },
                    { title: "Introduction to Machine Learning", duration: "70 min", completed: false }
                ],
                completed: false
            },
            {
                id: 3,
                title: "Digital Marketing Strategy",
                description: "Master the art of digital marketing with SEO, social media, and content strategy.",
                duration: "5 weeks",
                lessons: 10,
                image: "Digital Marketing",
                lessonsList: [
                    { title: "Digital Marketing Overview", duration: "35 min", completed: false },
                    { title: "SEO Fundamentals", duration: "50 min", completed: false },
                    { title: "Social Media Marketing", duration: "45 min", completed: false },
                    { title: "Content Strategy", duration: "40 min", completed: false },
                    { title: "Analytics and Measurement", duration: "55 min", completed: false }
                ],
                completed: false
            }
        ];

        // DOM Elements
        const coursesGrid = document.getElementById('courses-grid');
        const coursesSection = document.getElementById('courses-section');
        const courseDetail = document.getElementById('course-detail');

        // Render Courses
        function renderCourses() {
            coursesGrid.innerHTML = '';
            
            courses.forEach(course => {
                const courseCard = document.createElement('div');
                courseCard.className = 'course-card';
                courseCard.innerHTML = `
                    <div class="course-image" style="background-color: ${getRandomColor()}">
                        ${course.image}
                    </div>
                    <div class="course-content">
                        <h3 class="course-title">${course.title}</h3>
                        <p class="course-description">${course.description}</p>
                        <div class="course-meta">
                            <span>${course.duration}</span>
                            <span>${course.lessons} lessons</span>
                        </div>
                        <span class="course-status ${course.completed ? 'status-completed' : 'status-not-started'}">
                            ${course.completed ? 'Completed' : 'Not Started'}
                        </span>
                    </div>
                `;
                
                courseCard.addEventListener('click', () => showCourseDetail(course.id));
                coursesGrid.appendChild(courseCard);
            });
        }

        // Show Course Detail
        function showCourseDetail(courseId) {
            const course = courses.find(c => c.id === courseId);
            if (!course) return;
            
            // Calculate progress
            const completedLessons = course.lessonsList.filter(lesson => lesson.completed).length;
            const progress = (completedLessons / course.lessonsList.length) * 100;
            
            // Generate lessons HTML
            let lessonsHTML = '';
            course.lessonsList.forEach((lesson, index) => {
                lessonsHTML += `
                    <div class="lesson-item">
                        <input type="checkbox" class="lesson-checkbox" data-course="${courseId}" data-lesson="${index}" ${lesson.completed ? 'checked' : ''}>
                        <div class="lesson-title">${lesson.title}</div>
                        <div class="lesson-duration">${lesson.duration}</div>
                    </div>
                `;
            });
            
            courseDetail.innerHTML = `
                <div class="back-button" id="back-button">
                    <span>‚Üê</span> Back to Courses
                </div>
                <div class="course-header">
                    <div class="course-banner" style="background-color: ${getRandomColor()}">
                        ${course.image}
                    </div>
                    <div class="course-info">
                        <h1 class="course-detail-title">${course.title}</h1>
                        <p class="course-detail-description">${course.description}</p>
                        <div class="course-meta">
                            <span>${course.duration}</span>
                            <span>${course.lessons} lessons</span>
                        </div>
                        <div class="progress-container">
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: ${progress}%"></div>
                            </div>
                            <div class="progress-text">${completedLessons} of ${course.lessonsList.length} lessons completed</div>
                        </div>
                        <button class="btn btn-primary complete-course-btn" id="complete-course-btn" data-course="${courseId}">
                            ${course.completed ? 'Course Completed' : 'Mark as Completed'}
                        </button>
                    </div>
                </div>
                <div class="lessons-list">
                    <h3>Course Content</h3>
                    ${lessonsHTML}
                </div>
            `;
            
            // Show course detail and hide courses grid
            coursesSection.style.display = 'none';
            courseDetail.style.display = 'block';
            
            // Add event listeners
            document.getElementById('back-button').addEventListener('click', showCoursesGrid);
            
            const completeBtn = document.getElementById('complete-course-btn');
            if (!course.completed) {
                completeBtn.addEventListener('click', () => markCourseAsCompleted(courseId));
            }
            
            // Add event listeners to lesson checkboxes
            const checkboxes = document.querySelectorAll('.lesson-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', toggleLessonCompletion);
            });
        }

        // Show Courses Grid
        function showCoursesGrid() {
            coursesSection.style.display = 'block';
            courseDetail.style.display = 'none';
            renderCourses();
        }

        // Toggle Lesson Completion
        function toggleLessonCompletion(event) {
            const courseId = parseInt(event.target.dataset.course);
            const lessonIndex = parseInt(event.target.dataset.lesson);
            
            const course = courses.find(c => c.id === courseId);
            if (course) {
                course.lessonsList[lessonIndex].completed = event.target.checked;
                
                // Update progress
                const completedLessons = course.lessonsList.filter(lesson => lesson.completed).length;
                const progress = (completedLessons / course.lessonsList.length) * 100;
                
                document.querySelector('.progress-fill').style.width = `${progress}%`;
                document.querySelector('.progress-text').textContent = 
                    `${completedLessons} of ${course.lessonsList.length} lessons completed`;
                
                // If all lessons are completed, mark course as completed
                if (completedLessons === course.lessonsList.length) {
                    course.completed = true;
                    document.getElementById('complete-course-btn').textContent = 'Course Completed';
                    document.getElementById('complete-course-btn').disabled = true;
                }
            }
        }

        // Mark Course as Completed
        function markCourseAsCompleted(courseId) {
            const course = courses.find(c => c.id === courseId);
            if (course) {
                course.completed = true;
                // Mark all lessons as completed
                course.lessonsList.forEach(lesson => {
                    lesson.completed = true;
                });
                
                // Update UI
                document.getElementById('complete-course-btn').textContent = 'Course Completed';
                document.getElementById('complete-course-btn').disabled = true;
                
                // Update checkboxes
                const checkboxes = document.querySelectorAll('.lesson-checkbox');
                checkboxes.forEach(checkbox => {
                    checkbox.checked = true;
                });
                
                // Update progress
                document.querySelector('.progress-fill').style.width = '100%';
                document.querySelector('.progress-text').textContent = 
                    `${course.lessonsList.length} of ${course.lessonsList.length} lessons completed`;
            }
        }

        // Helper function to generate random colors
        function getRandomColor() {
            const colors = ['#4361ee', '#3a0ca3', '#4cc9f0', '#7209b7', '#f72585', '#4895ef'];
            return colors[Math.floor(Math.random() * colors.length)];
        }

        // Initialize the app
        document.addEventListener('DOMContentLoaded', renderCourses);
    </script>
</body>
</html>
