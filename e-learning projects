            <p>Discover a wide range of courses designed to help you learn new skills and advance your career.</p>
            <button class="btn btn-primary" style="background-color: white; color: var(--primary);">Explore Courses</button>
        </div>
    </section>

    <!-- Main Content -->
    <div class="container">
        <!-- Courses Grid -->
        <section id="courses-section">
            <h2 class="section-title">Available Courses</h2>
            <div class="courses-grid" id="courses-grid">
                <!-- Courses will be dynamically inserted here -->
            </div>
        </section>

        <!-- Course Detail -->
        <section id="course-detail" class="course-detail">
            <!-- Course details will be dynamically inserted here -->
        </section>
